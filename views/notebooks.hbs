<h1>Notebooks</h1>

{{#if notebooks.length}}
<div class="content_notebook">
{{#each notebooks}}
  <div class="card">
    <div class="card-image">
      <img src="{{img}}" alt="{{title}}">
    </div>
    <div class="card-content">
      <span class="card-title">{{title}}</span>
      <b>{{price}}</b>
      <p>{{descr}}</p>
    </div>
    <div class="card-action">
      <a href="/notebooks/{{id}}">Details</a>
    </div>
  </div>
{{/each}}
</div>
{{else}}
<b>Notebooks empty</b>
{{/if}}